<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Metallica Festival</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Additional styling for index page */

        /* Centering the main content */
        section {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: calc(100vh - 100px);
        }

        /* Counter container styling */
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
            margin-bottom: 20px;
        }

        .block {
            background-color: rgba(0, 0, 0, 0.7);
            padding: 20px;
            border-radius: 10px;
            text-align: center;
        }

        .block h2 {
            color: #ff0000;
            font-size: 3rem;
            margin: 0;
        }

        .block h6 {
            color: #fff;
            font-size: 1rem;
            margin: 5px 0 0;
        }

        /* Event info styling */
        .event-info {
            text-align: center;
            margin-top: 20px;
        }

        .event-info .date, .event-info .location {
            font-size: 1.5rem;
            margin: 5px 0;
            color: #fff;
        }

        /* Header styling */
        header {
            position: fixed;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            padding: 10px 0;
            z-index: 1000;
        }

        header h1 {
            color: #ff0000;
            margin: 0;
            font-size: 2rem;
            animation: bloodDrop 2s infinite;
        }

        @keyframes bloodDrop {
            0%, 100% {
                text-shadow: 0 0 10px red, 0 0 20px red, 0 0 30px red, 0 0 40px red;
            }
            50% {
                text-shadow: 0 0 20px darkred, 0 0 30px darkred, 0 0 40px darkred, 0 0 50px darkred;
            }
        }

        nav ul {
            list-style: none;
            padding: 0;
            margin: 10px 0 0;
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        nav ul li {
            display: inline;
        }

        nav ul li a {
            text-decoration: none;
            color: #ff0000;
            font-size: 1rem;
            position: relative;
            transition: color 0.3s;
        }

        nav ul li a::after {
            content: '';
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            bottom: -5px;
            width: 0;
            height: 2px;
            background-color: red;
            transition: width 0.3s;
        }

        nav ul li a:hover::after {
            width: 100%;
        }

        nav ul li a:hover {
            color: #fff;
        }

        /* Footer styling */
        footer {
            background-color: rgba(0, 0, 0, 0.7);
            color: #fff;
            padding: 10px 0;
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <!-- Header and Navigation -->
    <header>
        <h1>Metallica Festival</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/lineup">Lineup</a></li>
                <li><a href="/stages">Stages</a></li>
                <li><a href="/faq">FAQ</a></li>
                <li><a href="/contact">Contact Us</a></li>
            </ul>
        </nav>
    </header>

    <!-- Content -->
    <section>
        <div class="container">
            <div class="counter">
                <div class="block">
                    <h2 class="days"><%= days %></h2>
                    <h6>days</h6>
                </div>
            </div>
            <div class="counter">
                <div class="block">
                    <h2 class="hours"><%= hours %></h2>
                    <h6>hours</h6>
                </div>
            </div>
            <div class="counter">
                <div class="block">
                    <h2 class="min"><%= min %></h2>
                    <h6>minutes</h6>
                </div>
            </div>
            <div class="counter">
                <div class="block">
                    <h2 class="sec"><%= sec %></h2>
                    <h6>seconds</h6>
                </div>
            </div>
        </div>

        <!-- Event Info -->
        <div class="event-info">
            <p class="date"><%= concertDate %></p>
            <p class="location"><%= concertLocation %></p>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 Metallica Festival</p>
    </footer>

    <!-- Countdown Script -->
    <script>
        function updateTimeLeft() {
            const eventDate = new Date("<%= concertDate %>");
            const now = new Date();
            let timeLeft = eventDate - now;

            if (timeLeft <= 0) {
                clearInterval(timerID);
                eventIsOver();
                setTimeout(restartCountdown, 1 * 60 * 1000); // Restart countdown after 1 minute
                return;
            }

            const msInSec = 1000;
            const msInMin = 60 * msInSec;
            const msInHr = 60 * msInMin;
            const msInDay = 24 * msInHr;

            const displayDays = Math.floor(timeLeft / msInDay);
            document.querySelector(".days").textContent = displayDays;

            const displayHours = Math.floor((timeLeft % msInDay) / msInHr);
            document.querySelector(".hours").textContent = displayHours;

            const displayMin = Math.floor((timeLeft % msInHr) / msInMin);
            document.querySelector(".min").textContent = displayMin;

            const displaySec = Math.floor((timeLeft % msInMin) / msInSec);
            document.querySelector(".sec").textContent = displaySec;
        }

        function eventIsOver() {
            const heading = document.querySelector("h1");
            heading.textContent = "Event is over";
            heading.classList.add("endTitle");

            const subHeading = document.querySelector("h3");
            subHeading.textContent = "See you next year!";
        }

        function restartCountdown() {
            const now = new Date();
            const nextYear = now.getFullYear() + 1;
            const eventDate = new Date(`June 20, ${nextYear} 18:30:00`);
            let timeLeft = eventDate - now;

            const randomIndex = Math.floor(Math.random() * cities.length);
            const randomCity = cities[randomIndex];

            const eventDateElement = document.getElementById("eventDate");
            eventDateElement.textContent = `June 20, ${nextYear} | ${randomCity}`;

            const heading = document.querySelector("h1");
            heading.textContent = "Insound";
            heading.classList.remove("endTitle");

            const subHeading = document.querySelector("h3");
            subHeading.textContent = "Music festival";

            clearInterval(timerID);

            timerID = setInterval(function () {
                timeLeft -= 1000;
                if (timeLeft <= 0) {
                    restartCountdown();
                    return;
                }

                updateTimeLeft(timeLeft);
            }, 1000);
        }

        let timerID = setInterval(updateTimeLeft, 1000);
    </script>
</body>
</html>
