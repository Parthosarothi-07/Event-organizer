<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Metallica Festival - Lineup</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Metallica Festival Theme Styles */
        body {
            background-color: #000;
            color: #fff;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        main {
            padding: 20px;
            max-width: 800px; /* Adjust as needed */
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            border: 1px solid #fff;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #333;
        }

        td {
            background-color: #555;
        }

        footer {
            background-color: #000;
            color: #fff;
            text-align: center;
            padding: 10px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>

<body>
    <!-- Header and Navigation -->
    <header>
        <h1>Metallica Festival</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/lineup">Lineup</a></li>
                <li><a href="/stages">Stages</a></li>
                <li><a href="/faq">FAQ</a></li>
                <li><a href="/contact">Contact Us</a></li>
            </ul>
        </nav>
    </header>

    <!-- Content -->
    <main>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Genre</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <% 
                // Create a Set to store unique artists
                const uniqueArtistsSet = new Set();

                // Iterate over the lineup and add each artist to the Set
                lineup.forEach(function(artist) {
                    uniqueArtistsSet.add(artist.name);
                });

                // Convert Set back to an array
                const uniqueArtistsArray = [...uniqueArtistsSet];

                // Iterate over the unique artists and render them in the table
                uniqueArtistsArray.forEach(function(artistName) {
                    // Find the artist object in the lineup array
                    const artist = lineup.find(a => a.name === artistName);
                %>
                <tr>
                    <td><%= artist.name %></td>
                    <td><%= artist.genre %></td>
                    <td><%= artist.description %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </main>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 Metallica Festival</p>
    </footer>
</body>

</html>
