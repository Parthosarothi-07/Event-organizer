<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Metallica Festival - Stages</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Additional Styles */
        body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background-color: #000;
            color: #fff;
            margin: 0;
            font-family: 'Press Start 2P', cursive, 'Trispace', sans-serif;
            min-height: 100vh;
            text-align: center;
        }

        header {
            position: fixed;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            padding: 10px 0;
            z-index: 1000;
        }

        header h1 {
            color: #ff0000;
            margin: 0;
            font-size: 2rem;
            animation: bloodDrop 2s infinite;
        }

        @keyframes bloodDrop {
            0%, 100% {
                text-shadow: 0 0 10px red, 0 0 20px red, 0 0 30px red, 0 0 40px red;
            }
            50% {
                text-shadow: 0 0 20px darkred, 0 0 30px darkred, 0 0 40px darkred, 0 0 50px darkred;
            }
        }

        nav ul {
            list-style: none;
            padding: 0;
            margin: 10px 0 0;
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        nav ul li {
            display: inline;
        }

        nav ul li a {
            text-decoration: none;
            color: #ff0000;
            font-size: 1rem;
            position: relative;
            transition: color 0.3s;
        }

        nav ul li a::after {
            content: '';
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            bottom: -5px;
            width: 0;
            height: 2px;
            background-color: red;
            transition: width 0.3s;
        }

        nav ul li a:hover::after {
            width: 100%;
        }

        nav ul li a:hover {
            color: #fff;
        }

        .stage-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin-top: 80px; /* Adjust for fixed header */
            padding: 20px;
        }

        .stage {
            background-color: rgba(0, 0, 0, 0.7); /* Transparent black background */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(255, 255, 255, 0.3);
            transition: transform 0.3s, box-shadow 0.3s;
            max-width: 300px;
        }

        .stage:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(255, 255, 255, 0.5);
        }

        .stage h2 {
            color: #ff0000;
            font-size: 2rem;
            margin-bottom: 10px;
        }

        .stage p {
            color: #fff;
            font-size: 1rem;
            margin-bottom: 10px;
        }

        .artists {
            color: #fff;
            margin-bottom: 20px;
        }

        .artists h3 {
            color: #ff0000;
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .artists ul {
            list-style: none;
            padding: 0;
        }

        .artists li {
            margin-bottom: 10px;
        }

        .artists h4 {
            color: #ff0000;
            font-size: 1.2rem;
            margin-bottom: 5px;
        }

        footer {
            background-color: rgba(0, 0, 0, 0.7);
            color: #fff;
            padding: 10px 0;
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>

<body>
    <!-- Header and Navigation -->
    <header>
        <h1>Metallica Festival</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/lineup">Lineup</a></li>
                <li><a href="/stages">Stages</a></li>
                <li><a href="/faq">FAQ</a></li>
                <li><a href="/contact">Contact Us</a></li>
            </ul>
        </nav>
    </header>

    <!-- Content -->
    <section class="stage-container">
        <% stages.forEach(stage => { %>
        <div class="stage">
            <h2><%= stage.name %></h2>
            <p><%= stage.description %></p>
            <div class="artists">
                <h3>Performing Artists:</h3>
                <ul>
                    <% stage.artists.forEach(artist => { %>
                    <li>
                        <h4><%= artist.name %></h4>
                        <p><%= artist.genre %></p>
                        <p><%= artist.description %></p>
                    </li>
                    <% }) %>
                </ul>
            </div>
        </div>
        <% }) %>
    </section>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 Metallica Festival</p>
    </footer>
</body>

</html>
